<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay_item"
        android:layout_width="fill_parent"
        android:layout_height="144dip"
        android:layout_margin="2dip"
        android:background="@drawable/shape_details_product"
        android:gravity="center"
        android:orientation="vertical" android:layout_marginRight="81dip" android:layout_marginLeft="18dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="0.3"
            android:orientation="horizontal" android:gravity="center">

            <LinearLayout
                android:id="@+id/lay_img_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/img_delete_product"
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_marginLeft="16dip"
                    android:src="@drawable/deletee" />

            </LinearLayout>

            <com.raykaco.android.customcontrol.NewControlTextView
                android:id="@+id/txt_title_product"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="8dip"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:singleLine="false"
                android:text="اضافه کردن"
                android:textColor="#4183A5"
                android:textSize="12dip" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_marginRight="16dip"
                android:src="@drawable/tic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.raykaco.android.customcontrol.NewControlTextView
                android:id="@+id/txt_teacher_name"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="8dip"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:singleLine="false"
                android:text="اضافه کردن"
                android:textColor="#4183A5"
                android:textSize="12dip" />

            <com.raykaco.android.customcontrol.NewControlTextView
                android:id="@+id/NewControlTextView03"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="8dip"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:singleLine="false"
                android:text="نام مدرس :"
                android:textColor="#4183A5"
                android:textSize="12dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.raykaco.android.customcontrol.NewControlTextView
                android:id="@+id/txt_price_product"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="8dip"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:singleLine="false"
                android:text="اضافه کردن"
                android:textColor="#4183A5"
                android:textSize="12dip" />

            <com.raykaco.android.customcontrol.NewControlTextView
                android:id="@+id/NewControlTextView04"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="8dip"
                android:layout_weight="0.5"
                android:gravity="right|center"
                android:singleLine="false"
                android:text="قیمت محصول : "
                android:textColor="#4183A5"
                android:textSize="12dip" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>