                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:text="ارتباط با ما"
                        android:textColor="#ffffff"
                        android:textSize="14dip" />

                    <ImageView
                        android:id="@+id/ImageView09"
                        android:layout_width="48dip"
                        android:layout_height="34dip"
                        android:src="@drawable/mail" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_survey"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginBottom="2dip"
                android:background="#353535"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout09"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="8dip"
                    android:gravity="right|center"
                    android:orientation="horizontal" >

                    <com.raykaco.android.customcontrol.NewControlTextView
                        android:id="@+id/NewControlTextView1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dip"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:text="معرفی به دوستان"
                        android:textColor="#ffffff"
                        android:textSize="14dip" />

                    <ImageView
                        android:id="@+id/ImageView05"
                        android:layout_width="48dip"
                        android:layout_height="34dip"
                        android:src="@drawable/share" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_update"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginBottom="2dip"
                android:background="#353535"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout07"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="8dip"
                    android:gravity="right|center"
                    android:orientation="horizontal" >

                    <com.raykaco.android.customcontrol.NewControlTextView
                        android:id="@+id/NewControlTextView1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dip"
                        android:text="وب سایت برنامه"
                        android:textColor="#fffff6"
                        android:textSize="14dip" android:gravity="center" android:layout_weight="0.6"/>

                    <ImageView
                        android:id="@+id/ImageView06"
                        android:layout_width="48dip"
                        android:layout_height="34dip"
                        android:src="@drawable/domain_registration" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_about"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginBottom="2dip"
                android:background="#353535"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout08"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="8dip"
                    android:gravity="right|center"
                    android:orientation="horizontal" >

                    <com.raykaco.android.customcontrol.NewControlTextView
                        android:id="@+id/txt_about"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dip"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:text="درباره ما"
                        android:textColor="#ffffff"
                        android:textSize="14dip" />

                    <ImageView
                        android:id="@+id/ImageView04"
                        android:layout_width="48dip"
                        android:layout_height="34dip"
                        android:src="@drawable/information" />

