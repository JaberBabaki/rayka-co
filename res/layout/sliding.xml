                        android:textColor="#fffff6"
                        android:textSize="14dip" />

                    <ImageView
                        android:id="@+id/ImageView03"
                        android:layout_width="48dip"
                        android:layout_height="34dip"
                        android:src="@drawable/menu" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_necessary"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginBottom="2dip"
                android:background="#353535"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout11"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="8dip"
                    android:gravity="right|center"
                    android:orientation="horizontal" >

                    <com.raykaco.android.customcontrol.NewControlTextView
                        android:id="@+id/NewControlTextView1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dip"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:text="آموزش حضوری"
                        android:textColor="#fffff6"
                        android:textSize="14dip" />

                    <ImageView
                        android:id="@+id/ImageView08"
                        android:layout_width="48dip"
                        android:layout_height="34dip"
                        android:src="@drawable/cbt" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_teacher"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginBottom="2dip"
                android:background="#353535"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout03"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="8dip"
                    android:gravity="right|center"
                    android:orientation="horizontal" >

                    <com.raykaco.android.customcontrol.NewControlTextView
                        android:id="@+id/txt_idea"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dip"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:text="اساتید رایکا"
                        android:textColor="#ffffff"
                        android:textSize="14dip" />

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="48dip"
                        android:layout_height="30dip"
                        android:src="@drawable/teacher_rayka" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout12"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginBottom="2dip"
                android:background="#272727"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_contact_us"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginBottom="2dip"
                android:background="#353535"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LinearLayout14"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="8dip"
                    android:gravity="right|center"
                    android:orientation="horizontal" >

