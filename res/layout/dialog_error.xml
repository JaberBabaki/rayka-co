<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="center" android:layout_gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/shape_dialog"
        android:orientation="vertical" android:layout_marginBottom="80dip" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="100dip">

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_margin="1dip"
            android:background="@drawable/shape_dialog_color"
            android:gravity="center"
            android:orientation="vertical" >

            <com.raykaco.android.customcontrol.NewControlTextView
                android:id="@+id/txt_dialog_header"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dip"
                android:gravity="right|center"
                android:singleLine="false"
                android:text="مشکل در ارسال"
                android:textColor="#ffffff"
                android:textSize="12dip" />
        </LinearLayout>

        <com.raykaco.android.customcontrol.NewControlTextView
            android:id="@+id/txt_name_error"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_margin="8dip"
            android:gravity="right"
            android:text="مخاطب به کانتکت ها اضافه شود"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="12dip" android:visibility="gone" android:textColor="#000000" android:layout_weight="0.1" android:layout_marginTop="8dip"/>

        <com.raykaco.android.customcontrol.NewControlTextView
            android:id="@+id/txt_email_eror"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_margin="8dip"
            android:gravity="right"
            android:text="مخاطب به کانتکت ها اضافه شود"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="12dip"
            android:visibility="gone" android:layout_weight="0.1"/>

        <com.raykaco.android.customcontrol.NewControlTextView
            android:id="@+id/txt_subject_error"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_margin="8dip"
            android:gravity="right"
            android:text="مخاطب به کانتکت ها اضافه شود"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="12dip"
            android:visibility="gone" android:layout_weight="0.1"/>

        <com.raykaco.android.customcontrol.NewControlTextView
            android:id="@+id/txt_text_error"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_gravity="center"
            android:layout_margin="8dip"
            android:gravity="right"
            android:text="مخاطب به کانتکت ها اضافه شود"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="12dip"
            android:visibility="gone" android:layout_weight="0.1"/>

        <LinearLayout
            android:id="@+id/lay_ok_error"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:layout_marginTop="2dip"
            android:layout_weight="0.1"
            android:background="#ffffff"
            android:gravity="bottom" >

            <com.raykaco.android.customcontrol.NewControlTextView
                android:id="@+id/txt_ok_dialog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dip"
                android:gravity="bottom|center"
                android:singleLine="false"
                android:text="تایید"
                android:textColor="#D6564B"
                android:textSize="15dip" android:layout_marginBottom="4dip"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>