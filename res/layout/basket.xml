<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dip"
        android:background="#1A75BC"
        android:gravity="right" >

        <LinearLayout
            android:id="@+id/lay_notific"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/lay_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_marginLeft="16dip"
                    android:layout_marginRight="20dip"
                    android:src="@drawable/left_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" android:visibility="gone">

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_marginLeft="16dip"
                    android:layout_marginRight="20dip"
                    android:src="@drawable/magnifying" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_notific"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_notific_header"
                    android:layout_width="22dip"
                    android:layout_height="22dip"
                    android:layout_marginLeft="16dip"
                    android:layout_marginRight="20dip"
                    android:src="@drawable/notification" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_basket"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" >

                <RelativeLayout
                    android:layout_width="48dip"
                    android:layout_height="match_parent" >

                    <com.raykaco.android.customcontrol.NewControlTextView
                        android:id="@+id/txt_count_product"
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="8dip"
                        android:background="@drawable/shape_pic"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="10dip"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="22dip"
                        android:layout_height="22dip"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dip"
                        android:src="@drawable/basket" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_menue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center" >

            <com.raykaco.android.customcontrol.NewControlTextView
                android:id="@+id/txt_name_program"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="رایکا"
                android:textColor="#ffffff"
                android:textSize="15dip"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/men"
                android:layout_width="48dip"
                android:layout_height="27dip"
                android:src="@drawable/menu" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_description_h"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible" android:background="#f8f8f8">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" android:gravity="center" android:layout_marginLeft="4dip">

            <com.raykaco.android.customcontrol.NewControlTextView
                android:id="@+id/NewControlTextView02"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="right|center"
                android:text="ریال"
                android:textColor="#00c853" android:layout_marginLeft="4dip" android:layout_marginRight="2dip"/>

            <com.raykaco.android.customcontrol.NewControlTextView
                android:id="@+id/txt_totaly_price"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dip"
                android:layout_weight="0.7"
                android:gravity="left|center"
                android:text="ریال"
                android:textColor="#00c853" android:layout_marginLeft="2dip"/>
        </LinearLayout>

        <com.raykaco.android.customcontrol.NewControlTextView
            android:id="@+id/NewControlTextView01"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dip"
            android:layout_weight="0.5"
            android:gravity="right|center"
            android:textColor="#00c853" android:text="جمع کل خرید"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_check_internet"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#eeeeee"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.23"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/no_signal"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.23"
                android:orientation="vertical" >

                <com.raykaco.android.customcontrol.NewControlTextView
                    android:id="@+id/NewControlTextView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="خطا در اتصال به اینترنت"
                    android:textColor="#000000"
                    android:textSize="14dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_check_wifi"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginBottom="30dip"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="30dip"
                android:layout_weight="0.23"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.raykaco.android.customcontrol.NewControlTextView
                    android:id="@+id/NewControlTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="بررسی تنظیمات شبکه"
                    android:textColor="#000000"
                    android:textSize="12dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.23"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/lay_check_refresh"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_no_connect"
                        android:layout_width="250dip"
                        android:layout_height="48dip"
                        android:layout_marginLeft="2dip"
                        android:layout_marginRight="4dip"
                        android:background="@drawable/button_send_corner_selector"
                        android:text="تلاش مجدد"
                        android:textColor="#ffffff"
                        android:textSize="13dip" />

                    <com.raykaco.android.customcontrol.NewControlTextView
                        android:id="@+id/NewControlTextView1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="تلاش مجدد"
                        android:textColor="#000000"
                        android:textSize="16dip"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_check_mobile"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <com.raykaco.android.customcontrol.NewControlTextView
                        android:id="@+id/NewControlTextView1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="شبکه موبایل"
                        android:textColor="#000000"
                        android:textSize="16dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lay_lst_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <com.raykaco.android.customcontrol.CustomLoading
            android:id="@+id/txt_waite_main"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:layout_weight="0.5"
            android:text="در حال دریافت..."
            android:textColor="#00c853"
            android:textSize="16dip"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lst_product"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#e5e5e5"
            android:cacheColorHint="@null"
            android:clickable="false"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@null"
            android:dividerHeight="0dip"
            android:duplicateParentState="true"
            android:focusable="false"
            android:visibility="visible" android:layout_marginBottom="68dip" android:layout_marginTop="8dip">
            <!-- Preview: listitem=@layout/item_basket -->
        </ListView>

        <RelativeLayout
            android:id="@+id/lay_complete_buy"
            android:layout_width="match_parent"
            android:layout_height="55dip"
            android:layout_alignParentBottom="true"
            android:background="#64A7FF"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <com.raykaco.android.customcontrol.NewControlTextView
                android:id="@+id/txt_price_details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="#ffffff" android:text="تکمیل عملیات خرید"/>

            <ImageView
                android:id="@+id/ImageView10"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dip"
                android:src="@drawable/add_buy" android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lay_loading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.raykaco.android.customcontrol.CustomProgress
            android:id="@+id/CustomProgress1"
            android:layout_width="60dip"
            android:layout_height="60dip" />

        <com.raykaco.android.customcontrol.NewControlTextView
            android:id="@+id/newControlTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لطفا منتظر بمانید..." />
    </LinearLayout>

</LinearLayout>