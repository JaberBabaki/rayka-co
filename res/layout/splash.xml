<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#3A5183"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginTop="50dip"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="210dip"
            android:layout_height="50dip"
            android:scaleType="fitXY"
            android:src="@drawable/rayka_logo" />

        <com.raykaco.android.customcontrol.NewControlTextView
            android:id="@+id/NewControlTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="false"
            android:text="اول بودن عادت ماست"
            android:textColor="#F0FFFF"
            android:textSize="14dip" android:layout_marginTop="10dip"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_loading"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <com.raykaco.android.customcontrol.CustomProgress
            android:id="@+id/Custom1"
            android:layout_width="40dip"
            android:layout_height="40dip" />

        <com.raykaco.android.customcontrol.NewControlTextView
            android:id="@+id/newControlTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لطفا منتظر بمانید..." />
    </LinearLayout>

</LinearLayout>