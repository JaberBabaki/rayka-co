<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lay_itemm"
        android:layout_width="match_parent"
        android:layout_height="300dip"
        android:layout_marginBottom="4dip"
        android:layout_marginTop="4dip"
        android:background="@drawable/shape"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dip"
                        android:layout_marginBottom="4dip"
                        android:layout_marginLeft="2dip"
                        android:layout_marginTop="4dip"
                        android:background="#Eeeeee"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/ImageView01"
                            android:layout_width="8dip"
                            android:layout_height="fill_parent"
                            android:src="#CB4D1F" />

                        <com.raykaco.android.customcontrol.NewControlTextView
                            android:id="@+id/txt_name"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="CCNA Security 210-260"
                            android:textColor="#000000"
                            android:textSize="17dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dip"
                        android:layout_marginBottom="4dip"
                        android:layout_marginLeft="2dip"
                        android:layout_marginTop="4dip"
                        android:background="#Eeeeee"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/ImageView02"
                            android:layout_width="8dip"
                            android:layout_height="fill_parent"
                            android:src="#CB4D1F" />

                        <RelativeLayout
                            android:id="@+id/RelativeLayout01"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center" >

                            <com.raykaco.android.customcontrol.NewControlTextView
                                android:id="@+id/txt_salary"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentRight="false"
                                android:layout_alignParentTop="true"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="900,000 ﷼"
                                android:textColor="#000000"
                                android:textSize="15dip" />

                            <ImageView
                                android:id="@+id/img_discount"
                                android:layout_width="fill_parent"
                                android:layout_height="1dip"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="false"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="4dip"
                                android:layout_marginRight="4dip"
                                android:src="#CB4D1F" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/lay_discount"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:visibility="visible" >

                            <com.raykaco.android.customcontrol.NewControlTextView
                                android:id="@+id/txt_discount"
                                android:layout_width="0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="900,000 ﷼"
                                android:textColor="#000000"
                                android:textSize="15dip"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="bottom|center"
                    android:orientation="vertical" >

                    <com.raykaco.android.customcontrol.NewControlTextView
                        android:id="@+id/txt_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dip"
                        android:gravity="center"
                        android:text="مهندس مجید اسدپور"
                        android:textColor="#000000"
                        android:textSize="16dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_pic"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <com.raykaco.android.customcontrol.CircularNetworkImageView
                                android:id="@+id/img_teacher"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginTop="2dip" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="2dip"
                            android:gravity="bottom|center"
                            android:orientation="vertical" >

                            <com.raykaco.android.customcontrol.NewControlTextView
                                android:id="@+id/txt_view_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1K"
                                android:textColor="#000000"
                                android:textSize="10dip" />

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="32dip"
                                android:layout_height="20dip"
                                android:src="@drawable/view" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/img_pro"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dip"
                android:scaleType="fitXY" />

            <com.raykaco.android.customcontrol.NewControlTextView
                android:id="@+id/NewControlTextView01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:gravity="left"
                android:singleLine="false"
                android:text="آموزش تصویری: "
                android:textColor="#000000"
                android:textSize="12dip" android:layout_alignParentRight="false" android:layout_alignParentTop="false" android:layout_centerHorizontal="true" android:layout_centerInParent="true" android:layout_marginLeft="210dip" android:layout_alignParentLeft="true" android:visibility="gone"/>

            <com.raykaco.android.customcontrol.NewControlTextView
                android:id="@+id/txt_name_in_picture"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                android:layout_marginBottom="35dip"
                android:layout_marginLeft="30dip"
                android:gravity="left"
                android:singleLine="false"
                android:text="CCNA Security 210-260"
                android:textColor="#000000"
                android:textSize="13dip" android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>